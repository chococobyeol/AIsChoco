# =========================
# CHZZK 인증/연결
# =========================
CHZZK_CLIENT_ID=your-chzzk-client-id
CHZZK_CLIENT_SECRET=your-chzzk-client-secret
CHZZK_REDIRECT_URI=http://localhost:8080/callback
CHZZK_CHANNEL_ID=your-chzzk-channel-id
CHZZK_ACCESS_TOKEN=your-chzzk-access-token

# =========================
# Groq
# =========================
GROQ_API_KEY=your-groq-api-key
# GROQ_MODEL=openai/gpt-oss-120b

# =========================
# TTS / Overlay
# =========================
# TTS_OUTPUT_DEVICE=22
# TTS_REMOTE_URL=http://127.0.0.1:5001
# OVERLAY_PORT=8765

# =========================
# 기능 토글
# =========================
TAROT_ENABLED=true
WEB_SEARCH_ENABLED=true

# =========================
# 로그 설정
# =========================
# engineio/socketio noisy 로그 제어: WARNING | ERROR
ENGINEIO_LOG_LEVEL=ERROR

# 콘솔 출력 레벨: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_CONSOLE_LEVEL=WARNING

# 파일 회전 설정
LOG_MAX_MB=10
LOG_BACKUP_COUNT=5
